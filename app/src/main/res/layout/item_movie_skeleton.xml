<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/skeleton_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/skeleton_title"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toEndOf="@id/skeleton_image"
            app:layout_constraintTop_toTopOf="@id/skeleton_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/skeleton_date"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintTop_toBottomOf="@id/skeleton_title"
            app:layout_constraintStart_toEndOf="@id/skeleton_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/skeleton_rating"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintTop_toBottomOf="@id/skeleton_date"
            app:layout_constraintStart_toEndOf="@id/skeleton_image"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
